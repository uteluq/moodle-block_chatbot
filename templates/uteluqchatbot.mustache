<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{{#str}}chatbot_with_toggle_buttons, block_uteluqchatbot{{/str}}</title>
    <style>
    .block_uteluqchatbot .block-chatbot-container {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        height: 500px;
        margin: 0 auto;
        overflow: hidden;
        position: relative;
        width: 100%;
        max-width: 1000px;
    }

    .block_uteluqchatbot .chat-messages {
        flex-grow: 1;
        overflow-y: auto;
        padding: 20px;
        scrollbar-width: thin;
        scrollbar-color: #6366F1 #f1f5f9;
    }

    .block_uteluqchatbot .chat-messages::-webkit-scrollbar {
        width: 6px;
    }

    .block_uteluqchatbot .chat-messages::-webkit-scrollbar-track {
        background: #f1f5f9;
    }

    .block_uteluqchatbot .chat-messages::-webkit-scrollbar-thumb {
        background-color: #6366F1;
        border-radius: 3px;
    }

    .block_uteluqchatbot .message {
        border-radius: 15px;
        margin: 8px 0;
        max-width: 85%;
        padding: 12px 16px;
        position: relative;
        word-wrap: break-word;
    }

    .block_uteluqchatbot .user-message {
        background: #6366F1;
        color: white;
        margin-left: auto;
    }

    .block_uteluqchatbot .bot-message {
        background: #f1f5f9;
        color: #1e293b;
        margin-right: auto;
    }

    .block_uteluqchatbot .welcome-message {
        display: flex;
        align-items: flex-start;
        margin-bottom: 16px;
    }

    .block_uteluqchatbot .bot-avatar {
        margin-right: 8px;
        margin-top: 4px;
    }

    .block_uteluqchatbot .error-message {
        color: #ef4444;
        font-size: 0.875rem;
        margin: 8px 16px;
        text-align: center;
    }

    .block_uteluqchatbot .chat-input-container {
        background: #ffffff;
        border-top: 1px solid #e2e8f0;
        padding: 5px;
        display: flex;
        flex-direction: column;
    }

    .block_uteluqchatbot .chat-form {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 8px;
    }

    .block_uteluqchatbot .chat-input {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 24px;
        flex-grow: 1;
        font-size: 0.95rem;
        padding: 2px 2px;
        transition: border-color 0.2s;
        height: 42px;
        box-sizing: border-box;
        max-width: calc(100% - 54px);
    }

    .block_uteluqchatbot .chat-input:focus {
        border-color: #6366F1;
        outline: none;
        box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
    }

    .block_uteluqchatbot .send-button {
        background: #6366F1;
        border: none;
        border-radius: 50%;
        color: white;
        cursor: pointer;
        height: 42px;
        width: 42px;
        min-width: 42px;
        padding: 0;
        transition: background-color 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        position: relative;
        margin-left: auto;
    }

    .block_uteluqchatbot .send-button:hover {
        background: #4f46e5;
    }

    .block_uteluqchatbot .send-button svg {
        width: 20px;
        height: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .block_uteluqchatbot .button-container {
        display: flex;
        justify-content: flex-end;
        margin-top: 8px;
        flex-wrap: wrap;
        gap: 8px;
    }

    .block_uteluqchatbot .toggle-buttons-checkbox {
        display: flex;
        align-items: center;
        margin-right: 16px;
        font-size: 0.875rem;
        color: #64748b;
    }

    .block_uteluqchatbot .toggle-buttons-checkbox input[type="checkbox"] {
        margin-right: 8px;
    }

    .block_uteluqchatbot .prompt-button, .block_uteluqchatbot .file-upload-button {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 24px;
        color: #64748b;
        cursor: pointer;
        font-size: 0.875rem;
        padding: 8px 16px;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
    }

    .block_uteluqchatbot .prompt-button {
        margin-right: 8px;
    }

    .block_uteluqchatbot .prompt-button:hover, .block_uteluqchatbot .file-upload-button:hover {
        background: #f1f5f9;
        color: #4f46e5;
    }

    @media (max-width: 640px) {
        .block_uteluqchatbot .block-chatbot-container {
            height: 400px;
            max-width: 95%;
        }

        .block_uteluqchatbot .message {
            max-width: 90%;
        }

        .block_uteluqchatbot .chat-form {
            gap: 8px;
        }

        .block_uteluqchatbot .chat-input {
            max-width: calc(100% - 50px);
        }

        .block_uteluqchatbot .send-button {
            height: 42px;
            width: 42px;
            min-width: 42px;
        }

        .block_uteluqchatbot .button-container {
            justify-content: space-between;
        }

        .block_uteluqchatbot .prompt-button, .block_uteluqchatbot .file-upload-button {
            font-size: 0.75rem;
            padding: 6px 12px;
        }
    }
    </style>
</head>
<body>
<div class="block_uteluqchatbot block-chatbot-container">
    <div id="chat-messages" class="chat-messages">
        <div class="welcome-message">
            <div class="bot-avatar">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2Z" fill="#6366F1"/>
                    <path d="M12 6C9.79 6 8 7.79 8 10V14C8 16.21 9.79 18 12 18C14.21 18 16 16.21 16 14V10C16 7.79 14.21 6 12 6Z" fill="white"/>
                </svg>
            </div>
            <div class="message bot-message">
                {{#isteacher}}
                {{#str}}hello_professor, block_uteluqchatbot{{/str}}
                {{/isteacher}}
                {{^isteacher}}
                {{#str}}hello_student, block_uteluqchatbot{{/str}}
                {{/isteacher}}
            </div>
        </div>
    </div>
    <div id="error-message" class="error-message"></div>
    <div class="chat-input-container">
        <form id="chatform" class="chat-form">
            <input type="text" id="question" name="question"
                   class="chat-input" placeholder="{{#str}}ask_your_question_here, block_uteluqchatbot{{/str}}" required>
            <button type="submit" class="send-button">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2.01 21L23 12L2.01 3L2 10L17 12L2 14L2.01 21Z" fill="white"/>
                </svg>
            </button>
        </form>
        <div class="button-container">
            {{#isteacher}}
            <button id="toggle-prompt-form" class="prompt-button" onclick="togglePromptModal()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 13H13V19H11V13H5V11H11V5H13V11H19V13Z" fill="currentColor"/>
                </svg>
                {{#str}}modify_prompt, block_uteluqchatbot{{/str}}
            </button>
            <button id="toggle-file-upload-form" class="file-upload-button" onclick="toggleFileUploadModal()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 13H13V19H11V13H5V11H11V5H13V11H19V13Z" fill="currentColor"/>
                </svg>
                {{#str}}upload_course, block_uteluqchatbot{{/str}}
            </button>
            {{/isteacher}}
        </div>
    </div>
</div>

<script>

// Keep the original functions
function togglePromptModal() {
    console.log('{{#str}}open_prompt_modal, block_uteluqchatbot{{/str}}');
}

function toggleFileUploadModal() {
    console.log('{{#str}}open_file_upload_modal, block_uteluqchatbot{{/str}}');
}

</script>
</body>
</html>
