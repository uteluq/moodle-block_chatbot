{{!
  @template block_uteluqchatbot/load_course_modal
  Example context (json):
  {
    "str": {
      "add_files": "Add Files",
      "text_or_pdf_files": "Text or PDF Files",
      "drag_files_here_or_click": "Drag files here or click to upload",
      "cancel": "Cancel",
      "upload_course": "Upload Course"
    }
  }
}}
<style>
.block_uteluqchatbot .modal {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    overflow-y: auto;
}

.block_uteluqchatbot .modal-dialog {
    width: 90%;
    max-width: 500px;
    background-color: white;
    border-radius: 8px;
    overflow: hidden;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
}

.block_uteluqchatbot .modal-content {
    padding: 20px;
    overflow-y: auto;
}

.block_uteluqchatbot .modal-header, .block_uteluqchatbot .modal-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.block_uteluqchatbot .modal-footer {
    margin-top: 20px;
}

.block_uteluqchatbot .file-upload-container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2px dashed #ccc;
    padding: 20px;
    border-radius: 8px;
    cursor: pointer;
}

.block_uteluqchatbot .file-upload-box {
    text-align: center;
}

.block_uteluqchatbot .uploaded-file {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin-top: 10px;
}

.block_uteluqchatbot .uploaded-file button {
    background: none;
    border: none;
    cursor: pointer;
}

.block_uteluqchatbot .uploaded-file svg {
    width: 16px;
    height: 16px;
}

@media (max-width: 600px) {
    .block_uteluqchatbot .modal-footer {
        flex-direction: column;
        align-items: stretch;
    }

    .block_uteluqchatbot .modal-footer button {
        width: 100%;
        margin-top: 10px;
    }
}

</style>
<div id="fileUploadModal" class="block_uteluqchatbot modal" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{#str}}add_files, block_uteluqchatbot{{/str}}</h5>
                <button type="button" class="close" onclick="toggleFileUploadModal()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M19 6.41L17.59 5L12 10.59L6.41 5L5 6.41L10.59 12L5 17.59L6.41 19L12 13.41L17.59 19L19 17.59L13.41 12L19 6.41Z" fill="currentColor"/>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <form id="fileUploadForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="file">{{#str}}text_or_pdf_files, block_uteluqchatbot{{/str}}</label>
                        <div class="file-upload-container">
                            <input type="file" id="file" name="files[]" class="file-input" accept=".txt,.text,.md,.pdf" multiple required>
                            <div class="file-upload-box">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="upload-icon">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="17 8 12 3 7 8"></polyline>
                                    <line x1="12" y1="3" x2="12" y2="15"></line>
                                </svg>
                                <span class="upload-text">{{#str}}drag_files_here_or_click, block_uteluqchatbot{{/str}}</span>
                            </div>
                        </div>
                    </div>
                    <div id="uploadedFilesContainer"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn-secondary" onclick="toggleFileUploadModal()">{{#str}}cancel, block_uteluqchatbot{{/str}}</button>
                        <button type="submit" class="btn-primary">{{#str}}upload_course, block_uteluqchatbot{{/str}}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
